            <svg class="rotate180z" width="16" height="16" viewBox="0 0 32 32">
                <path d="M25.95 7.65l.005-.004c-.092-.11-.197-.206-.293-.312c-.184-.205-.367-.41-.563-.603c-.139-.136-.286-.262-.43-.391c-.183-.165-.366-.329-.558-.482c-.16-.128-.325-.247-.49-.367c-.192-.14-.385-.277-.585-.406a13.513 13.513 0 0 0-.533-.324q-.308-.179-.625-.341c-.184-.094-.37-.185-.56-.27c-.222-.1-.449-.191-.678-.28c-.19-.072-.378-.145-.571-.208c-.246-.082-.498-.15-.75-.217c-.186-.049-.368-.102-.556-.143c-.29-.063-.587-.107-.883-.15c-.16-.023-.315-.056-.476-.073A12.933 12.933 0 0 0 6 7.703V4H4v8h8v-2H6.811A10.961 10.961 0 0 1 16 5a11.111 11.111 0 0 1 1.189.067c.136.015.268.042.403.061c.25.037.501.075.746.128c.16.035.315.08.472.121c.213.057.425.114.633.183c.164.054.325.116.486.178c.193.074.384.15.57.235c.162.072.32.15.477.23q.268.136.526.286c.153.09.305.18.453.276c.168.11.33.224.492.342c.14.102.282.203.417.312c.162.13.316.268.47.406c.123.11.248.217.365.332c.167.164.323.338.479.512A10.993 10.993 0 1 1 5 16H3a13 13 0 1 0 22.95-8.35z" fill="currentColor" />
            </svg>
            Reset
        </button>
    </div>

    

    <div class="card-body">
        @using (Html.BeginForm("CreateDocumentList", "AgreementDocument", FormMethod.Post, new { id = "AgreementDocumentForm" }))
        {
            <div class="form-horizontal">

                <div class="col-md-6">
                    <div class="col-6 p-1">
                        <label class="m-0">Project <span style="color: red;">*</span></label>
                        @Html.DropDownList("ProjectRequestId", null, "Choose Project", htmlAttributes: new { @class = "form-control col-md-12", @required = "required" })
                    </div>

                    @* @for (int number = 0; number < 5; number++)
                { *@
                    <div class="form-group form-float">
                        <label class="form-label" for="termsDescription"><h5>HtmlText_1</h5><span style="color:red">*</span></label>
                        <div class="form-line">
                            <textarea rows="500" id="HtmlText_1" name="Agreement_FirstPage" class="form-control" required> @Model.Agreement_FirstPage</textarea>
                        </div>
                    </div>
                    <div class="form-group form-float">
                        <label class="form-label" for="termsDescription"><h5>HtmlText_2</h5><span style="color:red">*</span></label>
                        <div class="form-line">
                            <textarea rows="500" id="HtmlText_2" name="Agreement_SecondPage" class="form-control" required>@Model.Agreement_SecondPage</textarea>
                        </div>
                    </div>
                    <div class="form-group form-float">
                        <label class="form-label" for="termsDescription"><h5>HtmlText_3</h5><span style="color:red">*</span></label>
                        <div class="form-line">
                            <textarea rows="500" id="HtmlText_3" name="Agreement_ThirdPage" class="form-control" required>@Model.Agreement_ThirdPage</textarea>
                        </div>
                    </div>
                    <div class="form-group form-float">
                        <label class="form-label" for="termsDescription"><h5>HtmlText_4</h5><span style="color:red">*</span></label>
                        <div class="form-line">
                            <textarea rows="500" id="HtmlText_4" name="Agreement_ForthPage" class="form-control" required>@Model.Agreement_ForthPage</textarea>
                        </div>
                    </div>
                    @*  } *@

                </div>

                <div class="form-group col-md-12">
                    <button type="submit" class="btn btn-primary submit-btn pull-right btn-sm">Submit</button>
                </div>
            </div>
        }
    </div>
    <hr />
    <div class="card-header pull-left">
        <!-- <a href="/AgreementDocument/Index" class="btn btn-warning">Return to Index</a> -->
    </div>
</div>
<script src="~/SummerNote/summernote.min.js"></script>
<script>
    $(document).ready(function () {
        for (var num = 0; num < 5; num++) {
            var id = "#HtmlText_" + num.toString();
            $(id).summernote();
        }
    });
</script>