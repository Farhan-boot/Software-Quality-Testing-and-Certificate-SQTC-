    </div>

    <div class="card-body">
        @using (Html.BeginForm("Edit", "TestCase", FormMethod.Post, new { id = "Test CaseForm" }))
        {
            <input type="hidden" name="Id" id="Id" value="@Model.Id" />
            <input type="hidden" name="ProjectRequestId" id="ProjectRequestId" value="@Model.ProjectRequestId" />
            <input type="hidden" name="TaskOfProjectId" id="TaskOfProjectId" value="@Model.TaskOfProjectId" />
            <input type="hidden" name="TestScenarioId" id="TestScenarioId" value="@Model.TestScenarioId" />
            <input type="hidden" name="TestCategoryId" id="TestCategoryId" value="@Model.TestCategoryId" />
            <input type="hidden" name="TestCaseNo" id="TestCaseNo" value="@Model.TestCaseNo" />
            <input type="hidden" name="CreatedAt" id="CreatedAt" value="@Model.CreatedAt" />
            <div class="col-12 p-1 card-body mt-2 gray-card">
                <fieldset class="p-2">
                    <legend class="float-none w-auto">Test Case Details</legend>
                    <div class="row">
                        <div class="col-6 pr-1" style="max-width: 245px;">
                            <label class="m-0">Test Case Name<span style="color: red;">*</span></label>
                            <input type="text" class="form-control col-md-12" id="TestCaseName" name="TestCaseName" value="@Model.TestCaseName" placeholder="Enter Test Case Name" required>
                        </div>
                        <div class="col-6 pr-1" style="max-width: 245px;">
                            <label class="m-0">Case Description <span style="color: red;">*</span></label>
                            <textarea type="text" class="form-control col-md-12" id="CaseDescription" name="CaseDescription" placeholder="Enter Case Description" required>@Model.CaseDescription</textarea>
                        </div>
                        <div class="col-6 pr-1" style="max-width: 245px;">
                            <label class="m-0">ExpectedResult<span style="color: red;">*</span></label>
                            <input type="text" class="form-control col-md-12" id="ExpectedResult" name="ExpectedResult" value="@Model.ExpectedResult" placeholder="Enter Expected Result">
                        </div>
                        <div class="col-6 pr-1" style="max-width: 245px;">
                            <label class="m-0">ActualResult<span style="color: red;">*</span></label>
                            <input type="text" class="form-control col-md-12" id="ActualResult" name="ActualResult" value="@Model.ActualResult" placeholder="Enter Actual Result">
                        </div>
                        <div class="col-8 pr-1" style="max-width: 500px; margin-bottom: 20px;">
                            <label class="m-0">Comments<span style="color: red;">*</span></label>
                            <textarea type="text" class="form-control col-md-12" id="Comments" name="Comments" value="" placeholder="Enter Comments">@Model.Comments</textarea>
                        </div>
                    </div>
                    <div class="row" style="margin-bottom: 20px;">
                        <div class="col-6 pr-1" style="max-width: 245px;">
                            <label class="m-0">Test Data<span style="color: red;">*</span></label>
                            <input type="text" class="form-control col-md-12" id="TestData" name="TestData" value="@Model.TestData" placeholder="Enter Test Data">
                        </div>
                        <div class="col-6 pr-1" style="max-width: 245px;">
                            <label class="m-0">Planned Execution Date<span style="color: red;">*</span></label>
                            <input type="date" class="form-control col-md-12" id="PlannedExecutionDate" name="PlannedExecutionDate" value="@Model.PlannedExecutionDate?.ToString("yyyy-MM-dd")" placeholder="Enter Planned Execution Date">
                        </div>
                        <div class="col-6 pr-1" style="max-width: 245px;">
                            <label class="m-0">Actual Execution Date<span style="color: red;">*</span></label>
                            <input type="date" class="form-control col-md-12" id="ActualExecutionDate" name="ActualExecutionDate" value="@Model.ActualExecutionDate?.ToString("yyyy-MM-dd")" placeholder="Enter Actual Execution Date">
                        </div>
                        <div class="col-6 pr-1" style=" max-width: 245px;margin-bottom: 20px;">
                            <label for="inputTestResultId">Test Result<span style="color:red;">*</span></label>
                            @Html.DropDownList("TestResult", null, "Choose..", htmlAttributes: new { @class = "form-control", @required = "required" })
                        </div>
                        <div class="col-6 pr-1" style=" max-width: 245px;">
                            <label class="m-0">Executed By<span style="color: red;">*</span></label>
                            @Html.DropDownList("ExecutedByUserId", null, "Choose User", htmlAttributes: new { @class = "form-control col-md-12" })
                        </div>
                    </div>
                    <div class="row" style="width: 500px; margin-bottom: 20px;">
                        <div class="col-3">
                            <div style="display:flex; gap:3px;align-items:center">
                                <label>IsFirefox</label>
                                <input type="checkbox" @(Model.Firefox ? "checked='checked'" : "") value="true" style="width:20px" id="IsFirefox" value="@Model.Firefox" name="Firefox">
                            </div>
                        </div>
                        <div class="col-3">
                            <div style="display:flex; gap:5px;align-items:center">
                                <label>IsEdge</label>
                                <input type="checkbox" @(Model.Edge ? "checked='checked'" : "") value="true" style="width:20px" id="IsEdge" name="Edge">
                            </div>
                        </div>
                        <div class="col-3">
                            <div style="display:flex; gap:5px;align-items:center">
                                <label>IsIExplorer</label>
                                <input type="checkbox" @(Model.IE ? "checked='checked'" : "")  value="true" style="width:20px" id="IsIE" name="IE">
                            </div>
                        </div>

                        <div class="col-3">
                            <div style="display:flex; gap:5px;align-items:center">
                                <label>IsChrome</label>
                                <input type="checkbox" @(Model.Chrome ? "checked='checked'" : "") value="true" style="width:20px" id="IsFirefox" name="Chrome">
                            </div>
                        </div>
                    </div>
                    <div class="form-group col-md-12">
                        <button type="submit" class="btn btn-primary submit-btn pull-right btn-sm">Submit</button>
                    </div>
                </fieldset>
            </div>
        }
    </div>
    <hr />
    <div class="card-header pull-left">
       <!--<a href="/Test Case/Index" class="btn btn-warning">Return to Index</a>-->
    </div>
</div>

<script>
    $(".submit-btn").on("click", function () {
        if ($("#Test CaseForm").valid()) {
            //Do something here
            $(".loader").fadeIn("slow");
        }
    });

    $("#Test CaseForm").validate({
        // Specify validation rules
        rules: {
            Test CaseName: "required"
        },

    });
</script>