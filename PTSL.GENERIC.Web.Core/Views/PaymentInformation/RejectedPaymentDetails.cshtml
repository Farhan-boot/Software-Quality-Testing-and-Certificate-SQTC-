    </div>

    <div class="card-body">
        <table style="width:100%" class="form-horizontal mt-2 gray-card">
            <tr>
                <td style="width:50px;">Project Name: <b>@Model?.PaymentCalculationHeader?.ProjectRequest?.ProjectName</b></td>
            </tr>
            <tr>
                <td style="width:50px;">Payment Amount: <b>@Model?.PaymentAmount</b></td>
            </tr>
            <tr>
                <td style="width:50px;">Payment Method: <b>@Model?.PaymentMethodEnumId.GetEnumDisplayName()</b></td>
            </tr>

            <!--Bank Transfer Start-->
            <tr class="BankTransferDivId">
                <td style="width:50px;">From Bank Name: <b>@Model?.FromBankName</b></td>
            </tr>
            <tr class="BankTransferDivId">
                <td style="width:50px;">From Branch Name: <b>@Model?.FromBranchName</b></td>
            </tr>
            <tr class="BankTransferDivId">
                <td style="width:50px;">From Address: <b>@Model?.FromAddress</b></td>
            </tr>
            <tr class="BankTransferDivId">
                <td style="width:50px;">From Account Number: <b>@Model?.FromAccountNumber</b></td>
            </tr>
            <tr class="BankTransferDivId">
                <td style="width:50px;">From Account Name: <b>@Model?.FromAccountName</b></td>
            </tr>
            <tr class="BankTransferDivId">
                <td style="width:50px;">From Deposit Date: <b>@Model?.FromDepositDate</b></td>
            </tr>
            <tr class="BankTransferDivId">
                <td style="width:50px;">From Deposit Amount: <b>@Model?.FromDepositAmount</b></td>
            </tr>
            <tr class="BankTransferDivId">
                <td style="width:50px;">To Bank Name: <b>@Model?.ToBankName</b></td>
            </tr>
            <tr class="BankTransferDivId">
                <td style="width:50px;">To Branch Name: <b>@Model?.ToBranchName</b></td>
            </tr>
            <tr class="BankTransferDivId">
                <td style="width:50px;">To Address: <b>@Model?.ToAddress</b></td>
            </tr>
            <tr class="BankTransferDivId">
                <td style="width:50px;">To Account Number: <b>@Model?.ToAccountNumber</b></td>
            </tr>
            <tr class="BankTransferDivId">
                <td style="width:50px;">To Account Name: <b>@Model?.ToAccountName</b></td>
            </tr>
            <!--Bank Transfer End-->

            <!--Cheque Start-->
            <tr class="ChequeDviId">
                <td style="width:50px;">Cheque Number: <b>@Model?.ChequeNumber</b></td>
            </tr>
            <tr class="ChequeDviId">
                <td style="width:50px;">Cheque Deposit Name: <b>@Model?.ChequeDepositName</b></td>
            </tr>
            <tr class="ChequeDviId">
                <td style="width:50px;">Cheque Deposit Date: <b>@Model?.ChequeDepositDate</b></td>
            </tr>
            <tr class="ChequeDviId">
                <td style="width:50px;">Cheque Deposit Bank Name: <b>@Model?.ChequeDepositBankName</b></td>
            </tr>
            <tr class="ChequeDviId">
                <td style="width:50px;">Cheque Deposit Branch Name: <b>@Model?.ChequeDepositBranchName</b></td>
            </tr>
            <tr class="ChequeDviId">
                <td style="width:50px;">Cheque Deposit Address: <b>@Model?.ChequeDepositAddress</b></td>
            </tr>
            <tr class="ChequeDviId">
                <td style="width:50px;">Cheque Deposit Account Number: <b>@Model?.ChequeDepositAccountNumber</b></td>
            </tr>
            <tr class="ChequeDviId">
                <td style="width:50px;">Cheque Deposit Account Name: <b>@Model?.ChequeDepositAccountName</b></td>
            </tr>
            <tr class="ChequeDviId">
                <td style="width:50px;">Cheque Deposit Amount: <b>@Model?.ChequeDepositAmount</b></td>
            </tr>
            <!--Cheque End-->

            <!--Bank Deposite Start-->
            <tr class="BankDepositeDviId">
                <td style="width:50px;">Bank Depositor Name: <b>@Model?.BankDepositorName</b></td>
            </tr>
            <tr class="BankDepositeDviId">
                <td style="width:50px;">Bank Deposite Date: <b>@Model?.BankDepositeDate</b></td>
            </tr>
            <tr class="BankDepositeDviId">
                <td style="width:50px;">Bank Deposite Bank Name: <b>@Model?.BankDepositeBankName</b></td>
            </tr>
            <tr class="BankDepositeDviId">
                <td style="width:50px;">Bank Deposite Branch Name: <b>@Model?.BankDepositeBranchName</b></td>
            </tr>
            <tr class="BankDepositeDviId">
                <td style="width:50px;">Bank Deposite Address: <b>@Model?.BankDepositeAddress</b></td>
            </tr>
            <tr class="BankDepositeDviId">
                <td style="width:50px;">Bank Deposite Account Number: <b>@Model?.BankDepositeAccountNumber</b></td>
            </tr>
            <tr class="BankDepositeDviId">
                <td style="width:50px;">Bank Deposite Account Name: <b>@Model?.BankDepositeAccountName</b></td>
            </tr>
            <tr class="BankDepositeDviId">
                <td style="width:50px;">Bank Deposite Deposite Amount: <b>@Model?.BankDepositeDepositeAmount</b></td>
            </tr>
            <!--Bank Deposite End-->
        </table>

        <div class="container">
            <h4>Deposit Slip (File)</h4>
        @{
            if (Model?.DepositSlipFiles != null)
            {
                foreach (var item in Model?.DepositSlipFiles)
                {
                    <a href="@item.FilePathUrl.ToString()" download="">Download File</a><br />
                }
            }
        }
        </div>


    </div>
    <hr />
    <div class="card-header pull-left">
        <!--<a href="/MeetingType/Index" class="btn btn-warning">Return to Index</a>-->
    </div>
</div>

<script>
    $(".BankTransferDivId").hide();
    $(".ChequeDviId").hide();
    $(".BankDepositeDviId").hide();
    //BankTransferDivId
    var paymentMethodEnumHiddenId = $("#paymentMethodEnumId").val();
    //alert(paymentMethodEnumHiddenId);
    if (paymentMethodEnumHiddenId == "BankTransfer") {
        $(".BankTransferDivId").show();
        $(".ChequeDviId").hide();
        $(".BankDepositeDviId").hide();
    }
    if (paymentMethodEnumHiddenId == "ChequePayment") {
        $(".ChequeDviId").show();
        $(".BankTransferDivId").hide();
        $(".BankDepositeDviId").hide();
    }
    if (paymentMethodEnumHiddenId == "BankDeposit") {
        $(".BankTransferDivId").hide();
        $(".ChequeDviId").hide();
        $(".BankDepositeDviId").show();
    }

</script>