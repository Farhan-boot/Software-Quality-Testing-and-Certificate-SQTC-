<style>
    tbody {
        background: none;
    }

    td {
        padding-left: 3% !important;
        padding-top: 1% !important;
    }
</style>
<input id="paymentMethodEnumId" type="text" value="@Model.PaymentMethodEnumId" hidden />
<div class="card">
