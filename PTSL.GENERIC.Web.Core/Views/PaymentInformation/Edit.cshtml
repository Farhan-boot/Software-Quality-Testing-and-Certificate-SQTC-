<script>
    $('#ProjectRequestId').attr("disabled", true);
    $('#PaymentMethodEnumId').attr("disabled", true);

    $(".submit-btn").on("click", function () {
        if ($("#MeetingTypeForm").valid()) {
            //Do something here
            $(".loader").fadeIn("slow");
        }
    });

    $("#MeetingTypeForm").validate({
        // Specify validation rules
        rules: {
            MeetingTypeName: "required"
        },

    });
</script>


<script>
    $("#BankTransferDivId").hide();
    $("#ChequeDivId").hide();
    $("#BankDepositeDivId").hide();
    var paymentMethodEnumHiddenId = $("#PaymentMethodEnumHiddenId").val();
    

    if (paymentMethodEnumHiddenId == "BankTransfer") {
        $("#BankTransferDivId").show();
        $("#ChequeDivId").hide();
        $("#BankDepositeDivId").hide();
    }
    if (paymentMethodEnumHiddenId == "ChequePayment") {
        $("#ChequeDivId").show();
        $("#BankTransferDivId").hide();
        $("#BankDepositeDivId").hide();
    }
    if (paymentMethodEnumHiddenId == "BankDeposit") {
        $("#BankDepositeDivId").show();
        $("#ChequeDivId").hide();
        $("#BankTransferDivId").hide();
    }

</script>

<script>
    $("#ProjectRequestId").on("change", function () {
        const value = $(this).val();
        $.ajax({
            cache: false,
            type: "GET",
            url: "/PaymentInformation/GetPaymentCalculationHeaderByProjectRequestId?id=" + value,
            success: function (data) {
                //$("#PaymentAmount").val(data.Data);
                if (data.Data.Id > 0) {
                    $("#PaymentCalculationHeaderId").val(data.Data.Id);
                    $("#PaymentAmount").val(data.Data.GrandTotal);
                }
                else {
                    alert("Payment Calculation Data Not Found!");
                }


            },
            error: function (xhr, ajaxOptions, thrownError) {
                //
            }
        });
    });
</script>