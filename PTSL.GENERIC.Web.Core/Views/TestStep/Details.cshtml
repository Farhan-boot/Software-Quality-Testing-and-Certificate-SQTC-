@model PTSL.GENERIC.Web.Core.Model.EntityViewModels.Project.TestStepVM
@using PTSL.GENERIC.Web.Core.Helper.Enum;
@{
    ViewBag.Title = "Details";
    ViewBag.activeMenu = "Test Steps";
}
<style>
    fieldset {
        padding: 0px 15px;
        border: 1px solid gray;
    }

        fieldset legend {
            width: auto;
        }
</style>
<style>
    input, select {
        height: 30px !important;
        line-height: 10px !important;
        font-weight: 400 !important;
        color: black !important;
    }

    legend {
        font-weight: 500 !important;
        font-size: 20px !important;
    }
</style>
<div class="card">
    <div class="card-header">
        <h4>
            <a href="/TestStep/Index" class="mr-1 back">
                <svg width="20" height="20" viewBox="0 0 32 32">
                    <path fill="currentColor" d="m14 26l1.41-1.41L7.83 17H28v-2H7.83l7.58-7.59L14 6L4 16l10 10z" />
                </svg>
            </a>
            TestStep Details
        </h4>
    </div>
    <div class="card-body">
        <div class="card-body">
            <div class="card-body mt-2 gray-card">
                <fieldset class="mb-4">
                    <legend><b>Test Step Information</b></legend>
                    <div class="row">
                        @*
                        <div class="col-md-12" style="padding-bottom:15px">
                        *@
                        <div class="form-group col-md-6">
                            <label style="font-size:15px;">Project: <b>@Model?.ProjectRequest?.ProjectName</b></label>
                        </div>
                        <div class="form-group col-md-6">
                            <label style="font-size:15px;">Task: <b>@Model?.TaskOfProject?.TaskTitle</b></label>
                        </div>
                        <div class="form-group col-md-6">
                            <label style="font-size:15px;">Test Case : <b>@Model?.TestCase.TestCaseName</b></label>
                        </div>
                        <div class="form-group col-md-6">
                            <label style="font-size:15px;">Test_Step: <b>@Model?.Test_Step</b></label>
                        </div>
                        <div class="form-group col-md-6">
                            <label style="font-size:15px;">Test Data: <b>@Model?.TestData</b></label>
                        </div>
                        <div class="form-group col-md-6">
                            <label style="font-size:15px;">Expected Result: <b>@Model?.ExpectedResult</b></label>
                        </div>
                        <div class="form-group col-md-6">
                            <label style="font-size:15px;">Actual Result: <b>@Model?.ActualResult</b></label>
                        </div>
                        @*
                        </div>
                        *@
                    </div>
                </fieldset>
            </div>
        </div>
    </div>
</div>