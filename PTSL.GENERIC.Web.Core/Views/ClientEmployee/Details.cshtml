@model PTSL.GENERIC.Web.Core.Model.UserVM
@using PTSL.GENERIC.Web.Core.Helper.Enum;
@{
    ViewBag.Title = "Details";
}

<style>
    fieldset {
        padding: 0px 15px;
        border: 1px solid gray;
    }

        fieldset legend {
            width: auto;
        }
</style>

<style>
    input, select {
        height: 30px !important;
        line-height: 10px !important;
        font-weight: 400 !important;
        color: black !important;
    }

    legend {
        font-weight: 500 !important;
        font-size: 20px !important;
    }
</style>

<div class="card">
    <div class="card-header">
        <h4>
            <a href="/ClientEmployee/Index" class="mr-1 back">
                <svg width="20" height="20" viewBox="0 0 32 32">
                    <path fill="currentColor" d="m14 26l1.41-1.41L7.83 17H28v-2H7.83l7.58-7.59L14 6L4 16l10 10z" />
                </svg>
            </a>
            Client Details
        </h4>
    </div>

    <div class="card-body">
        <div class="card-body">
            <div class="form-horizontal gray-card">
                <fieldset>
                    <legend>Client User Information</legend>
                    <div class="row">
                        <div class="col-md-12" style="padding-bottom:15px">
                            <div class="form-group">
                                <label style="font-size:15px;">First Name: <b>@Model?.FirstName</b></label>
                            </div>
                            <div class="form-group">
                                <label style="font-size:15px;">Last Name: <b>@Model?.LastName</b></label>
                            </div>
                            <div class="form-group">
                                <label style="font-size:15px;">User Email: <b>@Model?.UserEmail</b></label>
                            </div>
                            <div class="form-group">
                                <label style="font-size:15px;">UserName: <b>@Model?.UserName</b></label>
                            </div>
                            <div class="form-group">
                                <label style="font-size:15px;">Mobile Number: <b>@Model?.UserPhone</b></label>
                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>
    </div>
</div>
