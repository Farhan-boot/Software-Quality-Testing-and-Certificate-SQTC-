<script>
    document.addEventListener('DOMContentLoaded', (event) => {
        // Extract data from the HTML
        const totalTestRequest = document.querySelector('.test-calender-left-box-content h6').textContent.trim();
        const totalAgreement = document.querySelector('.blue-test .test1-calender-left-box-content h6').textContent.trim();

        // Convert the data to numbers
        const totalTestRequestValue = Number(totalTestRequest);
        const totalAgreementsValue = Number(totalAgreement);

        // Generate the chart using Chart.js
        const ctx = document.getElementById('myChart').getContext('2d');
        const myChart = new Chart(ctx, {
            type: 'bar', // Type of chart: 'line', 'bar', 'pie', etc.
            data: {
                labels: ['Total Test Request', 'Total Agreement'], // Labels for the data points
                datasets: [{
                    label: 'Data Summary',
                    data: [totalTestRequestValue, totalAgreementsValue], // Data values extracted from the div elements
                    backgroundColor: [
                        'color: #27538A;',
                        'color: #168220;'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    });



