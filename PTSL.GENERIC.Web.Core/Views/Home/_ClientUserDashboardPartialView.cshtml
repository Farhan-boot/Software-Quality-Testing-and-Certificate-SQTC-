    // Function to display meetings in the container
    function displayMeetings(meetings) {
        var container = $("#meetings-container");
        container.empty(); // Clear previous meetings

        if (meetings != null) {
            meetings.Data.forEach(function (meeting) {
               
                var meetingCard = `
                            <div class="meeting-card">
                                <div class="meeting-logo">EK</div>
                                <div class="meeting-desc">
                                    <h6>${meeting.MeetingTitle}</h6>
                                    <p>${meeting.MeetingStartTime}</p>
                                </div>
                            </div>
                        `;
                container.append(meetingCard);
                console.log(container);
            });
        } else {
           
            container.append("<p>No meetings scheduled for this date.</p>");
        }
    }
</script>


