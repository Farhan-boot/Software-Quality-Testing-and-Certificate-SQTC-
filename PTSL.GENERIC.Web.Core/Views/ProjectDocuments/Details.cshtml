        <div class="card-body">
            <div class="form-horizontal mt-2 gray-card">
                <fieldset class="mb-4">
                    <legend><b>Document Information</b></legend>
                    <div class="row">
                        @*
                        <div class="col-md-12" style="padding-bottom:15px">
                        *@
