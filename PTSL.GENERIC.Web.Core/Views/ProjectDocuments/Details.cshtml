                            <label style="font-size:15px;">Project: <b>@Model?.ProjectRequest?.ProjectName</b></label>
                        </div>
                        <div class="form-group col-md-">
                            <label style="font-size:15px;">Document Categories: <b>@Model?.DocumentCategories?.Name</b></label>
                        </div>
                        <div class="form-group col-md-6">
                            <label style="font-size:15px;">Document Purpose: <b>@Model.DocumentPurpose</b></label>
                        </div>
                        <div class="form-group col-md-6">
                            <label style="font-size:15px;">Document Title: <b>@Model.DocumentTitle</b></label>
                        </div>
                        <div class="form-group col-md-6">
                            <label style="font-size:15px;">DocumentUniqueName: <b>@Model.DocumentUniqueName</b></label>
                            <a class="d-block" target="_blank" href="@Model.DoumentPath">Download Now</a>

                        </div>
                        <div class="form-group col-md-4">
                         
                        @*
                        </div>
