            color: #fff !important;
            font-weight: 700 !important;
            text-transform: capitalize !important;
        }

        .login-main {
            padding: 60px 0;
        }

        .login-content h4{
            font-size: 20px;
        }

        .login-content p, .login-content  ul li{
            color: #000;
        }

            .login-content p{
                text-align: justify;
            }

        .login-content ul li{
            font-size: 14px;
            font-weight: 500;
        }

        #login {
            border: 1px solid rgba(38, 85, 137, 1);
            padding: 15px 30px;
            border-radius: 30px;
        }

        #login h2{
            text-align: center;
            font-size: 30px;
        }

        #login label span{
            display: none;
        }

            #login #UserEmail {
                margin-bottom: 15px;
            }

            #login label input{
                border: 1px solid rgba(0, 0, 0, 0.42);
                height: 45px;
                border-radius: 10px;
                background: #fff;
            }

        .forgot_pass{
            font-weight: 700;
        }

        .login-buttons button{
            width: 100%;
            border-radius: 30px;
            padding: 8px;
            font-weight: 700;
            background: #24b574;
            color: #fff;
            border: none;
            margin-top: 15px;
        }

        .login-content {
            margin-right: 50px;
        }
    </style>
</head>
<body>
    <header class="th-header header-layout1 onepage-nav">
        <div class="sticky-wrapper">
            <div class="menu-area">
                <div class="container">
                    <div class="row align-items-center justify-content-between">
                        <div class="col-auto">
                            <div class="header-logo"><a class="icon-masking" href="#"><img src="~/external-template/assets/img/logo2.svg" alt="SHQTC"></a></div>
                        </div>
                        <div class="col-auto">
                            <nav class="main-menu d-none d-lg-inline-block">
                                <ul>
                                    <li>
                                        <a href="/">Home</a>
                                    </li>

                                    <li><a href="/Account/ExternalClientRegister" class="register-btn">Register</a></li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>



<div class="login-main">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="login-content">
                        <h4>About</h4>
                        <p>
                            Software and Hardware Quality Testing and Certification (SHQTC) Center is the only international quality software and hardware testing center established by Bangladesh Computer Council (BCC). The SHQTC Center is playing a leading role in ensuring the quality of software and hardware used in the country and cyber/digital security for the public. The center was launched in 2016 and is being run under the Testing, Quality Control, and Certification Wing of BCC. The center has international certification of TMMi (Level-5), ISO/IEC-17025, ISO/IEC-15408 standards.
                        </p>

                        <h4>Services</h4>
                        <ul>
                            <li>Quality assurance of domestic and imported software and hardware</li>
                            <li>Ensuring safe and risk-free use of software and hardware</li>
                            <li>Ensuring acceptance of indigenous software and hardware in the international market</li>
                            <li>Encouraging domestic institutions to test software and hardware.</li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div id="login">
                        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { id = "LoginForm", @class = "login-form" }))
                        {
                            <h2 class="login-header">Login to <br /> SHQTCMS</h2>

                            @Html.AntiForgeryToken()
                            if (ViewBag.ErrorMsg != null)
                            {
                                <div class="form-group">
                                    <label style="color:red" for="email">Email or Password is invalid!</label>
                                </div>
                            }

                            <label for="UserEmail">
                                <span>Email Address</span>
                                <input id="UserEmail" name="UserEmail" value="" type="text" placeholder="User Name" required />
                            </label>
                            <label for="UserPassword">
                                <span>Password</span>
                                <input id="UserPassword" name="UserPassword" value="" type="password" placeholder="Password" required />
                            </label>
                            <div class="forgot_pass">
                                <a href="#">Forgot password?</a>
                            </div>
                            <div class="login-buttons">
                                <div class="button-wrapper">
                                    <button type="submit" id="submitBtn" onclick="submitHandler">Login</button>
                                </div>
                                
                            </div>
                            <div style="color:red;font-weight:bold" id="tempDataContainer"></div>

                        }
                    </div>
                </div>
            </div>
        </div>
</div>


    <footer class="footer-wrapper footer-layout2">
