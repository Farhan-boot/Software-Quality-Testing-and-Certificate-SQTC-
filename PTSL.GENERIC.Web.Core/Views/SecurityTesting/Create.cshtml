    <div class="card-body">
        @using (Html.BeginForm("Create", "SecurityTesting", FormMethod.Post, new { id = "SecurityTestingForm", enctype = "multipart/form-data" }))
        {
            <div class="form-horizontal mt-2 gray-card">

                <div class="row p-1 custom ">
                    <div class="p-2 col-12">

                        <div class="row custom">
                            <div class="col-6 p-1">
                                <label class="m-0">Project <span style="color: red;">*</span></label>
                                @Html.DropDownList("ProjectRequestId", null, "Choose Project", htmlAttributes: new { @class = "form-control col-md-12", @required = "required" })
                            </div>
                            <div class="col-6 p-1">
                                <label class="m-0">Task <span style="color: red;">*</span></label>
                                @Html.DropDownList("TaskOfProjectId", null, "Choose Task", htmlAttributes: new { @class = "form-control col-md-12", @required = "required" })
                            </div>
                            <div class="col-6 p-1">
                                <label class="m-0">Severity Level <span style="color: red;">*</span></label>
                                @Html.DropDownList("SeverityLevel", null, "Choose Severity Level", htmlAttributes: new { @class = "form-control col-md-12", @required = "required" })
                            </div>
                            <div class="col-6 p-1">
                                <label class="m-0">Ease Of Exploitation <span style="color: red;">*</span></label>
                                @Html.DropDownList("EaseOfExploitation", null, "Choose EaseOfExploitation", htmlAttributes: new { @class = "form-control col-md-12", @required = "required" })
                            </div>
                        </div>

                        <div class="row custom ">
                            <div class="col-12 p-1">
                                <fieldset class="p-2">
                                    <legend class="float-none w-auto">Security Testing Details</legend>
                                    <div class="row">
                                        <div class="col-6 pr-1" style="max-width: 245px;">
                                            <label class="m-0">Vulnerability <span style="color: red;">*</span></label>
                                            <input type="text" class="form-control col-md-12" id="Vulnerability" name="Vulnerability" value="" placeholder="Enter Vulnerability" required>
                                        </div>
                                        <div class="col-6 pr-1" style="max-width: 245px;">
                                            <label class="m-0">CVSS_Score<span style="color: red;">*</span></label>
                                            <input type="text" class="form-control col-md-12" id="CVSS_Score" name="CVSS_Score" value="" placeholder="Enter CVSS Score">
                                        </div>
                                        <div class="col-6 pr-1" style="max-width: 245px;">
                                            <label class="m-0">Vulnerable Section<span style="color: red;">*</span></label>
                                            <textarea type="text" class="form-control col-md-12" id="VulnerableSection" name="VulnerableSection" value="" placeholder="Enter Vulnerable Section"></textarea>
                                        </div>
                                        <div class="col-6 pr-1" style="max-width: 245px;">
                                            <label class="m-0">Issue Detail<span style="color: red;">*</span></label>
                                            <textarea type="text" class="form-control col-md-12" id="Issuedetail" name="Issuedetail" value="" placeholder="Enter Issue detail"></textarea>
                                        </div>
                                        <div class="col-6 pr-1" style="max-width: 245px;">
                                            <label class="m-0">Impact<span style="color: red;">*</span></label>
                                            <textarea type="text" class="form-control col-md-12" id="Impact" name="Impact" value="" placeholder="Enter Impact"></textarea>
                                        </div>
                                        <div class="col-6 pr-1" style="max-width: 245px;">
                                            <label class="m-0">Recommendation<span style="color: red;">*</span></label>
                                            <textarea type="text" class="form-control col-md-12" id="Recommendation" name="Recommendation" value="" placeholder="Enter Recommendation"></textarea>
                                        </div>
                                        <div class="col-6 pr-1" style="max-width: 245px;">
                                            <label class="m-0">File:<span style="color: red;">*</span></label>
                                            <input type="file" multiple id="SecurityTestingFiles" name="SecurityTestingFiles" />
                                        </div>
                                    </div>
                                </fieldset>
                            </div>

                        </div>

                    </div>
                </div>

                <div class="form-group col-md-12">
                    <button type="submit" class="btn btn-primary submit-btn pull-right btn-sm">Submit</button>
                </div>
            </div>
        }
    </div>
    <hr />
    <div class="card-header pull-left">
        <!-- <a href="/SecurityTesting/Index" class="btn btn-warning">Return to Index</a> -->
    </div>
</div>

<script>
    $(".submit-btn").on("click", function () {
        if ($("#SecurityTestingForm").valid()) {
            //Do something here
            $(".loader").fadeIn("slow");
        }
    });

    $("#SecurityTestingForm").validate({
        // Specify validation rules
        rules: {
            SecurityTestingName: "required"
        },

    });
    $("#ProjectRequestId").change(function () {
       
        var selectedItem = $(this).val();
        var TaskList = $("#TaskOfProjectId");
        var TestCaseList = $("#TestCaseId");
        if (selectedItem == "" || selectedItem == null) {
            return true;
        }

        $.ajax({
            cache: false,
            type: "GET",
            url: "/Task/GetTaskListsByProJectId",
            data: { "id": selectedItem },
            success: function (data) {
               
                console.log(data);
                TaskList.html('<option value="">Choose..</option>');
                $.each(data, function (id, option) {
                    TaskList.append($('<option></option>').val(option.Id).html(option.TaskTitle));
                });
            },
            error: function (xhr, ajaxOptions, thrownError) {
                alert('Failed to retrieve data.');
            }
        });
        $.ajax({
            cache: false,
            type: "GET",
            url: "/TestCase/GetTestCaseListByProjectRequestId",
            data: { "id": selectedItem },
            success: function (data) {
               
                console.log(data);
                TestCaseList.html('<option value="">Choose..</option>');
                $.each(data, function (id, option) {
                    TestCaseList.append($('<option></option>').val(option.Id).html(option.TestCaseNo));
                });
            },
            error: function (xhr, ajaxOptions, thrownError) {
                alert('Failed to retrieve data.');
            }
        });
    });


</script>