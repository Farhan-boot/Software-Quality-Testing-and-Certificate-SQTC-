@model PTSL.GENERIC.Web.Core.Model.EntityViewModels.SecurityTestings.SecurityTestingVM
@using PTSL.GENERIC.Web.Core.Helper.Enum;
@{
    ViewBag.Title = "Details";
}

<style>
    fieldset {
        padding: 0px 15px;
        border: 1px solid gray;
    }

        fieldset legend {
            width: auto;
        }
</style>

<style>
    input, select {
        height: 30px !important;
        line-height: 10px !important;
        font-weight: 400 !important;
        color: black !important;
    }

    legend {
        font-weight: 500 !important;
        font-size: 20px !important;
    }
</style>

<div class="card">
    <div class="card-header">
        <h4>
            <a href="/SecurityTesting/Index" class="mr-1 back">
                <svg width="20" height="20" viewBox="0 0 32 32">
                    <path fill="currentColor" d="m14 26l1.41-1.41L7.83 17H28v-2H7.83l7.58-7.59L14 6L4 16l10 10z" />
                </svg>
            </a>
            Security Testing Details
        </h4>
    </div>

    <div class="card-body">
        <div class="card-body">
            <div class="card-body mt-2 gray-card">
                <fieldset>
                    <legend>Testing Information</legend>
                    <div class="row">
                        <div class="col-md-12" style="padding-bottom:15px">
                            <div class="form-group">
                                <label style="font-size:15px;">Project: <b>@Model?.ProjectRequest.ProjectName</b></label>
                            </div>
                            <div class="form-group">
                                <label style="font-size:15px;">Task: <b>@Model?.TaskOfProject.TaskTitle</b></label>
                            </div>
                            <div class="form-group">
                                <label style="font-size:15px;">EaseOfExploitation: <b>@Model?.EaseOfExploitation</b></label>
                            </div>
                            <div class="form-group">
                                <label style="font-size:15px;">SeverityLevel: <b>@Model.SeverityLevel</b></label>
                            </div>
                            <div class="form-group">
                                <label style="font-size:15px;">Vulnerability: <b>@Model.Vulnerability</b></label>
                            </div>
                            <div class="form-group">
                                <label style="font-size:15px;">VulnerableSection: <b>@Model.VulnerableSection</b></label>
                            </div>
                            <div class="form-group">
                                <label style="font-size:15px;">CVSS_Score: <b>@Model.CVSS_Score</b></label>
                            </div>
                            <div class="form-group">
                                <label style="font-size:15px;">Issuedetail: <b>@Model.Issuedetail</b></label>
                            </div>
                            <div class="form-group">
                                <label style="font-size:15px;">Impact: <b>@Model.Impact</b></label>
                            </div>
                            <div class="form-group">
                                <label style="font-size:15px;">Recommendation: <b>@Model.Recommendation</b></label>
                            </div>
                            <div class="form-group">
                                <label style="font-size:15px;">Current Document: </label>
                                @foreach (var item in Model.SecurityTestingFiles)
                                {
                                    <a class="d-block" target="_blank" href="@item.FileNameUrl">Download Now</a>
                                }
                            </div>
                            
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>
    </div>
